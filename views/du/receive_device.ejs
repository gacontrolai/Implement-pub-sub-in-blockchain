		<script>
			var colorList = [
				"bg-gradient-primary shadow-primary",
				"bg-gradient-info shadow-info",
				"bg-gradient-danger shadow-danger",
				"bg-gradient-success shadow-success",
				"bg-gradient-warning shadow-warning",
			];

			function newdevice(arrOfEvent) {
				$("#listDevice").empty();
				arrOfEvent.forEach((event) => {
					renderNewDevice(event);
				});
				$(".loader-wrapper").fadeOut("slow");
			}
			function renderNewDevice(event) {
				var ran = Math.floor(Math.random() * 5);
				console.log(ran);
				str1 = `<div class="card col-3">
				<div class="card-body">
					<h4 class="card-title">Event register</h4>
					<p>owner: ${event.returnValues.owner}</p>
			    <p>id: ${event.returnValues.id}</p>
			    <p>_decribe: ${event.returnValues._decribe}</p>
			    <p>price: ${event.returnValues.price}</p>
				</div>
			</div>`;
				str = `<div class="col-xl-4 col-sm-6 mb-xl-0 mb-4 mt-4">
			         <div class="card">
			           <div class="card-header pb-1">
			             <h5><b>OWNER:</b> ${event.returnValues.owner}</h5>
			           </div>
			           <div class="card-body">
			             <div class="row">
			               <div class="col-8">
			                 <div class="numbers">
			                   <p class="text-sm mb-0 text-uppercase font-weight-bold">Device Id:</p>
			                   <h5 class="font-weight-bolder">${event.returnValues.id}</h5>
							 <p class="text-sm mb-0 text-uppercase font-weight-bold">Device Name:</p>
			                   <h5 class="font-weight-bolder">${event.returnValues.deviceName}</h5>
			                   <p class="text-sm mb-0 text-uppercase font-weight-bold">Decribe:</p>
			                   <p class="card-text"> ${event.returnValues._decribe}</p>
			                   <p class="text-sm mb-0 text-uppercase font-weight-bold">Price:</p>
			                   <h5 class="font-weight-bolder">${web3.utils.fromWei(event.returnValues.price, "ether")} ETH/day</h5>
			                 </div>
			               </div>
			               <div class="col-4 text-end">
			                 <div class="icon icon-shape ${colorList[ran]} text-center rounded-circle">
			                   <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
			                 </div>
			               </div>
			             </div>
			             <div class="row">
			               <button class="btn btn-primary col-12" onclick="location.href='/DU/receive_data?deviceID=${event.returnValues.id}';"> View detail</button>
			             </div>
			           </div>
			         </div>
			       </div>`;

				$("#listDevice").append(str);
			}
			$(document).ready(async function () {
				await load();
				$.ajax({
					method: "GET",
					url: "/DU/received_devices",
					success: (devices) => {
						getSelectedDevices(
							devices.map((e) => {
								return stringToBytes32(e);
							}),
							newdevice
						);
					},
				});
				setTimeout(() => {
					if ($("#listDevice .card").length == 0) {
						$(".loader-wrapper").fadeOut("slow");
						emptyMsg = `<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h4>No device added yet !</h4>
							</div>
						</div>
					</div>`;
						$("#listDevice").append(emptyMsg);
					}
				}, 5000);
			});
