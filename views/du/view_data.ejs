		<!-- ajax code for page -->
		<script>
			var dataPrice;

			var dataOwner;
			var colorList = [
				"bg-gradient-primary shadow-primary",
				"bg-gradient-info shadow-info",
				"bg-gradient-danger shadow-danger",
				"bg-gradient-success shadow-success",
				"bg-gradient-warning shadow-warning",
			];

			$("#decrypt").click((event) => {
				if ($("#password").val() == "") {
					$("#displayMess").addClass("alert-danger");
					$("#displayMess").removeClass("alert-primary");
					$("#displayMess").text(`Please input password to decrypt the data`);
				}
				$.ajax({
					url: "/DU/decrypt_packet",
					method: "post",
					data: {
						dataID: "<%- dataID %>",
						password: $("#password").val(),
					},
					success: (res) => {
						$("#showData").text(res);
						$("#displayMess").addClass("alert-primary");
						$("#displayMess").removeClass("alert-danger");
						$("#displayMess").text(`Decrypt success`);
						console.log(res);
					},
					error: (err) => {
						$("#displayMess").addClass("alert-danger");
						$("#displayMess").removeClass("alert-primary");
						$("#displayMess").text(`Having error: ${err}`);
					},
				});
			});
			$("#download").click((event) => {
				data = $("#showData").text();
				download("<%- dataID %>.txt", data);
			});

			function dataInfo(events) {
				let event = events[0];
				var fromTime = new Date(parseInt(event.returnValues._from));
				var toTime = new Date(parseInt(event.returnValues._to));
				$("#dataID").text(event.returnValues.dataID);
				$("#to").text(toTime.toDateString());
				$("#from").text(fromTime.toDateString());
				$("#dataUri").attr("href", "http://localhost:8080/ipfs/" + event.returnValues._dataUri);
				$("#dataUri").text(event.returnValues._dataUri);
				$(".loader-wrapper").fadeOut("slow");
			}

			$(document).ready(async function () {
				await load();
				var dataID = stringToBytes32("<%- dataID %>");
				getDataByID(dataID, dataInfo);
			});
		</script>
