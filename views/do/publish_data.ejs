			function newData(event) {
				console.log(event);
				var ran = Math.floor(Math.random() * 5);
				console.log(ran);
				var fromTime = new Date(parseInt(event.returnValues._from));
				var toTime = new Date(parseInt(event.returnValues._to));
				console.log(toTime)
				str = `
								<div class="col-xl-4 col-sm-6 mb-xl-0 mb-4 mt-4">
									<div class="card">
									<div class="card-header pb-1">
										<h5><b>Data ID:</b> ${event.returnValues.dataID}</h5>
									</div>
									<div class="card-body">
										<div class="row">
											<div class="col-8">
											<div class="numbers">
												<p class="text-sm mb-0 text-uppercase font-weight-bold">From:</p>
												<p class="card-text"> ${fromTime.toDateString()}</p>
													<p class="text-sm mb-0 text-uppercase font-weight-bold">To:</p>
												<p class="card-text"> ${toTime.toDateString()}</p>
												<p class="text-sm mb-0 text-uppercase font-weight-bold">Data Uri:</p>
												<h5 class="font-weight-bolder"><a target="#" href="http://localhost:8080/ipfs/${event.returnValues._dataUri}">${event.returnValues._dataUri}</a></h5>
												<p class="text-sm mb-0 text-uppercase font-weight-bold">Re-encryption key Uri:</p>
												<h5 class="font-weight-bolder"><a target="#" href="http://localhost:8080/ipfs/${event.returnValues._keyUri}">${event.returnValues._keyUri}</a></h5>

											</div>
											</div>
											<div class="col-4 text-end">
											<div class="icon icon-shape ${colorList[ran]} text-center rounded-circle">
												<i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
											</div>
											</div>
										</div>
									</div>
									</div>
								</div>`;
				$("#listDevice").append(str);
			}

			function deviceInfo(event) {
				dataPrice = event.returnValues.price
				dataOwner = event.returnValues.owner
				$("#owner").text(dataOwner);
				$("#deviceID").text(event.returnValues.id);
				$("#describe").text(event.returnValues._decribe);
				$("#price").text(web3.utils.fromWei(event.returnValues.price, 'ether'));
				$(".loader-wrapper").fadeOut("slow");
			}
			function calTotalPrice() {
				var totalDate = calTotalDate()
				return totalDate * dataPrice
			}

			function calTotalDate() {
				var to = $("#to").val();
				var from = $("#from").val();
				if (from != "" && to != "") {
					var fromTime = new Date(from);
					var toTime = new Date(to);
					if (fromTime > toTime) {
						return 0;
					}
					var duration = toTime - fromTime;
					var totalDate = duration / 1000 / (60 * 60 * 24);
					return totalDate
				} else {
					return 0;
				}
			}

			$("#to").change((data) => {
				var totalDate = calTotalDate()
				$("#totalDate").text(totalDate);
				$("#totalPrice").text(web3.utils.fromWei(calTotalPrice().toString(), 'ether'));
				if (totalDate <= 0) {
					subscribeTable.clear().draw();
					return
				}
				var to = $("#to").val();
				var from = $("#from").val();
				var fromTime = new Date(from).getTime();
				var toTime = new Date(to).getTime();
				var deviceID = web3.utils.hexToUtf8($("#deviceID").text());
				var pass = $("#password").val();
				$.ajax({
					url: "/DO/get_subscriber",
					method: "POST",
					data: {
						deviceID: deviceID,
						from: fromTime,
						to: toTime,
					},
					success: (res) => {
						subscribeTable.clear().draw();
						res.forEach((element) => {
							subscribeTable.row.add([element.bc_address,(new Date(element.start_day)).toDateString(),(new Date(element.end_day)).toDateString()]).draw();
						});

					}
				})
			});

			$("#from").change((data) => {
				var totalDate = calTotalDate()
				$("#totalDate").text(totalDate);
				$("#totalPrice").text(web3.utils.fromWei(calTotalPrice().toString(), 'ether'));
				if (totalDate <= 0) {
					subscribeTable.clear().draw();
					return
				}
				var to = $("#to").val();
				var from = $("#from").val();
				var fromTime = new Date(from).getTime();
				var toTime = new Date(to).getTime();
				var deviceID = web3.utils.hexToUtf8($("#deviceID").text());
				var pass = $("#password").val();

				$.ajax({
					url: "/DO/get_subscriber",
					method: "POST",
					data: {
						deviceID: deviceID,
						from: fromTime,
						to: toTime,
					},
					success: (res) => {
						subscribeTable.clear().draw();
						res.forEach((element) => {
							subscribeTable.row.add([element.bc_address, (new Date(element.start_day)).toDateString(),(new Date(element.end_day)).toDateString()]).draw();
						});

					}
				})
			});

			document.getElementById("subscribeForm").addEventListener("submit", function (event) {
				event.preventDefault();
				var totalPrice = calTotalPrice();
				if (totalPrice > 0) {
					$("#displayMess").removeClass("alert-danger");
					$("#displayMess").text("");
					var to = $("#to").val();
					var from = $("#from").val();
					var fromTime = new Date(from).getTime();
					var toTime = new Date(to).getTime();
					var deviceID = web3.utils.hexToUtf8($("#deviceID").text());
					var pass = $("#password").val();
					console.log(fromTime)
					console.log(toTime)
					pk = Cookies.get('pk');
					var formData = new FormData();
					formData.append('from', fromTime);
					formData.append('to', toTime);
					formData.append('deviceID', deviceID);
					formData.append('password', pass);
					formData.append('file', $('input[name="file"]').get(0).files[0]);
					$.ajax({
						method: "POST",
						url: "/DO/uploadfile",
						data: formData,
						cache: false,
						contentType: false,
						processData: false,
						success: (res) => {
							var rekRUI = res.rek;
							var dataURI = res.data;
							var strDataID = makeid(20);
							var bytesDataID = stringToBytes32(strDataID);
							method.publish($("#deviceID").text(), bytesDataID, fromTime, toTime, rekRUI, dataURI).send({ from: account }).on("receipt", (receipt) => {
								$("#displayMess").addClass("alert-primary");
								$("#displayMess").removeClass("alert-danger");
								$("#displayMess").text("Publish success");
								$.ajax({
									method: "POST",
									url: "/DO/store_package",
									data: {
										dataID: strDataID,
										deviceID: deviceID,
										sk: res.sk,
										pk: res.pk,
										start: fromTime,
										end: toTime,
										dataUri: dataURI,
										rekUri: rekRUI,
									},
									success: (insertRes) => {
										console.log(insertRes)
									},
									error: (err) => {
										console.log(err)
									}
								})
								console.log(receipt)
							}).on("error", (err) => {
								$("#displayMess").addClass("alert-danger");
								$("#displayMess").removeClass("alert-primary");
								$("#displayMess").text("Fail to publish device");
								console.log(err)
							})
							console.log("sucess: ", res)
						},
						error: (error) => {
							$("#displayMess").addClass("alert-danger");
							$("#displayMess").removeClass("alert-primary");
							$("#displayMess").text(error.responseText);
							console.log(JSON.stringify(error));
						}
					})
				} else {
					$("#displayMess").addClass("alert-danger");
					$("#displayMess").text("Start day must smaller than end day")
				}
			});

			$(document).ready(async function () {
				await load();
				subPub(<%- `"${deviceID}",` %> newData);
				getDeviceDetail(<%- `"${deviceID}",` %> deviceInfo);


			});
		</script>
