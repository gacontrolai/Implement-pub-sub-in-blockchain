				order: [[1, "asc"]],
			});
			var dataOwner;
			var colorList = [
				"bg-gradient-primary shadow-primary",
				"bg-gradient-info shadow-info",
				"bg-gradient-danger shadow-danger",
				"bg-gradient-success shadow-success",
				"bg-gradient-warning shadow-warning",
			];
			function newData(event) {
				console.log(event);
				var ran = Math.floor(Math.random() * 5);
				console.log(ran);
				var fromTime = new Date(parseInt(event.returnValues._from));
				var toTime = new Date(parseInt(event.returnValues._to));
				console.log(toTime);
				str = `
								<div class="col-xl-4 col-sm-6 mb-xl-0 mb-4 mt-4">
									<div class="card">
									<div class="card-header pb-1">
										<h5><b>Data ID:</b> ${event.returnValues.dataID}</h5>
									</div>
									<div class="card-body">
										<div class="row">
											<div class="col-8">
											<div class="numbers">
												<p class="text-sm mb-0 text-uppercase font-weight-bold">From:</p>
												<p class="card-text"> ${fromTime.toDateString()}</p>
													<p class="text-sm mb-0 text-uppercase font-weight-bold">To:</p>
												<p class="card-text"> ${toTime.toDateString()}</p>
												<p class="text-sm mb-0 text-uppercase font-weight-bold">Data Uri:</p>
												<h5 class="font-weight-bolder"><a target="#" href="http://localhost:8080//ipfs/${event.returnValues._dataUri}">${event.returnValues._dataUri}</a></h5>
												<p class="text-sm mb-0 text-uppercase font-weight-bold">Re-encryption key Uri:</p>
												<h5 class="font-weight-bolder"><a target="#" href="http://localhost:8080//ipfs/${event.returnValues._keyUri}">${event.returnValues._keyUri}</a></h5>

											</div>
											</div>
											<div class="col-4 text-end">
											<div class="icon icon-shape ${colorList[ran]} text-center rounded-circle">
												<i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
											</div>
											</div>
										</div>
									</div>
									</div>
								</div>`;
				$("#listDevice").append(str);
			}

			function deviceInfo(event) {
				dataPrice = event.returnValues.price;
				dataOwner = event.returnValues.owner;
				$("#owner").text(dataOwner);
				$("#deviceID").text(event.returnValues.id);
				$("#describe").text(event.returnValues._decribe);
				$("#price").text(web3.utils.fromWei(event.returnValues.price, "ether"));
				$(".loader-wrapper").fadeOut("slow");
			}

			$("#confirm").click(async (event) => {
				pass = $("#pass").val();
				$.ajax({
					method: "POST",
					url: "/DO/update_key",
					data: { txID: "<%- trans -%>", password: pass },
					success: (res) => {
						deviceID = stringToBytes32(res.deviceID);
						method
							.updateKey(deviceID, res.txID, res.to, res.rek)
							.send({ from: account })
							.on("receipt", (receipt) => {
								console.log(receipt);
							});
					},
					error: (err) => {
						console.log(err);
					},
				});
			});

			subscribeTable.on("select", async function (e, dt, type, indexes) {
				if (type === "row") {
					var data = await subscribeTable.rows({ selected: true }).data().pluck(0);
					console.log(data);
					var price = await method.calPackagePrice(stringToBytes32(deviceID), data.toArray()).call({ from: account });
					console.log(price);
					$("#price").text(web3.utils.fromWei(price));

					// do something with the ID of the selected items
				}
			});

			subscribeTable.on("deselect", async function (e, dt, type, indexes) {
				if (type === "row") {
					var data = await subscribeTable.rows({ selected: true }).data().pluck(0);
					console.log(data);
					var price = await method.calPackagePrice(stringToBytes32(deviceID), data.toArray()).call({ from: account });
					console.log(price);
					$("#price").text(web3.utils.fromWei(price));

					// do something with the ID of the selected items
				}
			});

			$(document).ready(async function () {
				await load();

				$.ajax({
					url: "/DO/data_need_update",
					data: { txID: "<%- trans -%>" },
					method: "post",
					success: (res) => {
						console.log(res);
						$(".loader-wrapper").fadeOut("slow");
						deviceID = res[0].device_id_fk;
						subscribeTable.clear().draw();
						res.forEach((element) => {
							console.log(element);
							$(".loader-wrapper").fadeOut("slow");
							linkToTransaction = `<a href= "/DU/confirm_received_data?trans_id=${element.trans_id}"> ${element.trans_id} </a>`;
							subscribeTable.row.add([stringToBytes32(element.data_id), new Date(element.start_day).toDateString(), new Date(element.end_day).toDateString()]).draw();
						});
					},
				});
			});
		</script>
