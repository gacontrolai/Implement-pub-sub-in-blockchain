		<script src="/javascripts/subcribeEvent.js"></script>
		<!-- ajax code for page -->
		<script>
			var colorList = [
				"bg-gradient-primary shadow-primary",
				"bg-gradient-info shadow-info",
				"bg-gradient-danger shadow-danger",
				"bg-gradient-success shadow-success",
				"bg-gradient-warning shadow-warning",
			];

			function listSubscriber(arrOfEvent) {
				$("#listSubscriber").empty();
				arrOfEvent.forEach((event) => {
					renderSubscriber(event);
				});
				$(".loader-wrapper").fadeOut("slow");
			}
			function renderSubscriber(event) {
				var ran = Math.floor(Math.random() * 5);
				console.log(ran);
				var fromTime = new Date(parseInt(event.returnValues.start)).toDateString();
				var toTime = new Date(parseInt(event.returnValues.end)).toDateString();
				function calTotalDate(fromTime, toTime) {
					if (fromTime > toTime) {
						return 0;
					}
					var duration = toTime - fromTime;
					var totalDate = duration / 1000 / (60 * 60 * 24);
					return totalDate;
				}
				str = `<div class="col-xl-4 col-sm-6 mb-xl-0 mb-4 mt-4">
            <div class="card">
              <div class="card-header pb-1">
                <h5><b>Subscriber:</b> ${event.returnValues.from}</h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-8">
                    <div class="numbers">
                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Device ID</p>
                      <p class="font-weight-bolder">${event.returnValues.deviceID}</p>

					  <p class="text-sm mb-0 text-uppercase font-weight-bold">From:</p>
                      <p class="card-text">${fromTime}</p>

                      <p class="text-sm mb-0 text-uppercase font-weight-bold">To:</p>
                      <p class="card-text"> ${toTime}</p>

                      <p class="text-sm mb-0 text-uppercase font-weight-bold">Total Price:</p>
                      <h5 class="font-weight-bolder">${web3.utils.fromWei(event.returnValues.price, "ether")} Ether</h5>
					 
                    </div>
                  </div>
                  <div class="col-4 text-end">
                    <div class="icon icon-shape ${colorList[ran]} text-center rounded-circle">
                      <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>`;

				$("#listSubscriber").append(str);
			}
			$(document).ready(async function () {
				await load();
				getSubscriberByDO(account, listSubscriber);
				setTimeout(() => {
					if ($("#listSubscriber .card").length == 0) {
						$(".loader-wrapper").fadeOut("slow");
						emptyMsg = `<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h4>No device added yet !</h4>
							</div>
						</div>
					</div>`;
						$("#listSubscriber").append(emptyMsg);
					}
				}, 5000);
			});
		</script>
