	<script>
		function genID() {
			let rand = makeid(25);
			$("#deviceID").val(rand);
		}
		document.getElementById("register-form").addEventListener("submit", function (event) {
			event.preventDefault();
			var form = $(this);
			console.log(form);
			let inputValue = $("form :input");
			decribe = inputValue[4].value;
			deviceID = inputValue[0].value;
			deviceName = inputValue[2].value;
			price = web3.utils.toWei(`${inputValue[3].value}`, "ether");
			console.log(inputValue);
			console.log(deviceID);
			console.log(decribe);
			let idInBytes = stringToBytes32(deviceID);
			register(idInBytes, deviceName, decribe, price)
				.on("receipt", function (receipt) {
					$("#bytesID").removeClass("alert-danger");
					$("#bytesID").addClass("alert-primary");
					$("#bytesID")[0].innerHTML = "Created success device with ID: " + idInBytes;

					var form = $("form");
					var actionUrl = form.attr("action");
					$.ajax({
						type: "POST",
						url: "/DO/store_register_device",
						data: form.serialize(),
						success: (data) => {
							console.log(data);
						},
						error: (err) => {
							console.log(data);
						},
					});
				})
				.on("error", function (error, receipt) {
					$("#bytesID").removeClass("alert-primary");
					$("#bytesID").addClass("alert-danger");
					$("#bytesID")[0].innerHTML = "Fail to create device";
					console.log(error);
				});
		});
	</script>
